<!DOCTYPE html>
<html>
<head>
    <title>PEONHQ - WebGL Runner</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="css/index.css" type="text/css" />
    <link rel="stylesheet" href="/css/avatars.css" type="text/css" />

    <script src="/scripts/Lib/jquery-2.1.1.min.js"></script>
    <script src="/scripts/Lib/angular.min.js"></script>
    <script src="/scripts/angularModules.js"></script>
</head>

<body ng-app="indexModule" ng-controller="loginController">
    <h1>Ravine Run!</h1>
    <form id="loginForm" action="/play" method="POST">
        <div class="inputgroup">
            <input ng-model="name" name="name" type="text" class="input {{nameEdited?'playerName':'placeholderText'}}" ng-click="nameClicked()" />
            <div class="characterCard">
                <div class="a-{{char.characterId}} avatar {{char.characterId==character.characterId?'':'grayscale'}}" ng-repeat="char in characters" ng-click="select(char.characterId)"></div>
            </div>
            <div id="descriptionBox">
                <input type="hidden" name="character" value="{{character.characterId}}" />
                <div class="playerName">{{character.name}}</div>
                <div class="characterDescription">{{character.description}}</div>
            </div>
        </div>
        <div class="inputgroup {{urlEdited&&url||!(nameEdited&&name)?'hide':''}}">
            <div class="selectButton" id="playButton" ng-click="create()">Create game</div>
        </div>
        <div class="inputgroup {{nameEdited&&name?'':'hide'}}">
            <input ng-model="url" style="font-size:large" type="text" class="input playerName" ng-click="urlClicked()" />
            <div class="selectButton {{urlEdited&&url?'':'hide'}}" ng-click="join()">Join game!</div>
        </div>
    </form>
</body>
</html>